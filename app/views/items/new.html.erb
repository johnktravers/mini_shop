<h1 class="mt-4">Create a New Item for <%= link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>
<br />

<form action="/merchants/<%= @merchant.id %>/items" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

  <p>Name</p>
  <input type="text" name="item[name]" class="form-control" /><br />

  <p>Price</p>
  <input type="number" step="0.01" min="0" name="item[price]" class="form-control" /><br />

  <p>Description</p>
  <textarea name="item[description]" class="form-control"></textarea><br />

  <p>Image (URL)</p>
  <input type="text" name="item[image]" class="form-control" /><br />

  <p>Quantity in Stock</p>
  <input type="number" step="1" min="0" name="item[inventory]" class="form-control" /><br />

  <input type="submit" name="create_item" value="Create Item" class="btn btn-primary"/>
</form>
